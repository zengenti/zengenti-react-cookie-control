{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@storybook/react"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
